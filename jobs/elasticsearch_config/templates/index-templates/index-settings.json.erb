{
  "template": "<%= p('elasticsearch_config.index_prefix') %>*",
  "order": 101,
  "settings": { 
    "index": {
      "codec": "best_compression",
      "search": {
        "slowlog": {
          "threshold": {
            "query": {
              "warn": "30s",
              "info": "15s",
              "debug": "10s",
              "trace": "5s"
            }
          }
        }
      }      
    }    
  }
}
